    <script>
        // Lógica de interacción
        const panel = document.getElementById('info-panel');
        const title = document.getElementById('info-title');
        const desc = document.getElementById('info-desc');
        const hotspots = document.querySelectorAll('.hotspot');

        function closeInfo() {
            panel.classList.remove('visible');
        }

        hotspots.forEach(spot => {
            spot.addEventListener('click', function(evt) {
                // Obtenemos los datos guardados en el hotspot
                const t = this.getAttribute('data-title');
                const d = this.getAttribute('data-desc');
                
                title.innerText = t;
                desc.innerText = d;
                panel.classList.add('visible');
                
                // Efecto visual: Pequeño flash en el punto tocado
                // Creamos una esfera temporal donde se hizo clic
                const splash = document.createElement('a-sphere');
                splash.setAttribute('position', evt.detail.intersection.point);
                splash.setAttribute('radius', '0.05');
                splash.setAttribute('color', '#00d2ff');
                splash.setAttribute('material', 'emissive: #00d2ff; emissiveIntensity: 2');
                splash.setAttribute('animation', 'property: scale; to: 3 3 3; dur: 300; easing: easeOutQuad');
                splash.setAttribute('animation__fade', 'property: material.opacity; to: 0; dur: 300; easing: easeOutQuad');
                
                document.querySelector('a-scene').appendChild(splash);
                setTimeout(() => { splash.parentNode.removeChild(splash) }, 350);
            });
        });
    </script>
